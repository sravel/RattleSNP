#%Module1.0
##

## Required internal variables
set     prefix       $env(HOME)/softs/RattleSNP
set     version      "1.0.0"

# check if install directory exist
if {![file exists $prefix]} {
    puts stderr "\t[module-info name] Load Error: $prefix does not exist"
    break
    exit 1
}

## List conflicting modules here
## conflict RattleSNP

## List prerequisite modules here
# module load snakemake/5.19.2
module load python/3.7
module load graphviz/2.40.1
module load r/4.1.0

set		fullname	RattleSNP-1.0.0
set		externalurl	"\n\thttps://github.com/sravel/RattleSNP\n"
set		description	"\n\tRattleSNP is SNP calling workflow"

## Required for "module help ..."
proc ModulesHelp { } {
  global description externalurl
  puts stderr "Description - $description"
  puts stderr "More Docs   - $externalurl"
}

## Required for "module display ..." and SWDB
module-whatis   "loads the [module-info name] environment"

## Software-specific settings exported to user environment

prepend-path PATH $prefix
